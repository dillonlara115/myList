<div data-role="header" data-theme="b">
  <h1>My list</h1>
</div>
 <div data-role="content">
 	<% if user_signed_in? %>
 		<%= link_to 'Mylist', profiles_show_path, "data-role" => "button", "data-transition" => "flip" %>
 		<%= link_to "Logout", destroy_user_session_path, method: :delete, "data-role" => "button", "data-transition" => "flip"  %>
